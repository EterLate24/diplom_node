<h1>Редактировать</h1>
    <form action="/save_applications" method="post">
        <label for="_id">ID</label>
        <input readonly type="text" name="_id" value={{_id}}>

        <label for="phone_number">Номер телефона</label>
        <input type="text" name="phone_number" value={{phone_number}}>

        <label for="device_type">Тип устройства</label>
        <input  type="text" name="device_type" value={{device_type}}>

        <label for="brand">Брэнд</label>
        <input  type="text" name="brand" value="{{brand}}">

        <label for="model">Модель</label>
        <input  type="text" name="model" value={{model}}>

        <label for="defect">Вид поломки</label>
        <input  type="text" name="defect" value={{defect}}>

        <label for="date_visit">Дата визита</label>
        <input  type="datetime-local" name="date_visit" value={{date_visit}}>

        <label for="comment">Комментарий клиента</label>
        <input  type="text" name="comment" value={{comment}}>

        <label for="admin_comment">Комментарий администратора</label>
        <input  type="text" name="admin_comment" value={{admin_comment}}>

        <label for="result">Результат</label>
        <input  type="checkbox" name="result" value={{result}}>

        <button type="submit">Сохранить</button>
    </form>